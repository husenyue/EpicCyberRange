    "authentication_bypass",
    "privilege_escalation",
    "information_disclosure",
    "deserialization",
    "unknown"
  ],
  "file_processing": {
    "max_file_size": "10MB",
    "supported_extensions": [".json", ".txt", ".md"],
    "encoding": "utf-8"
  }
}